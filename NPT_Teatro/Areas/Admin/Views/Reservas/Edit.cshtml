@using NPT_Teatro.Utilidades
@model NPT_Teatro.Models.ViewModels.ReservaVM
@{
    ViewData["Title"] = "Editar reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.IsInRole(CNT.Admin))
{
    <br />
    <br />
    <h3 class="text-center text-light">Editar reserva</h3>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <!--El enctype nos deja subir imagenes-->
        <input type="hidden" asp-for="Reserva.Id" />
        <div class="row px-2 mx-2 border">
            <div asp-validtaion-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8 mt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label class="text-light" asp-for="Reserva.Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Reserva.Email" class="form-control" />
                        <span asp-validation-for="Reserva.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label class="text-light" asp-for="Reserva.FuncionId">Funcion Id</label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.Reserva.FuncionId, Model.ListaFunciones,
                       "-Seleccionar función-", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label class="text-light" asp-for="Reserva.CantEntradas"></label>
                    </div>
                    <div class="col-8">
                        <input name="cantEntradas" asp-for="Reserva.CantEntradas" class="form-control" max="100" min="1" />
                        <span asp-validation-for="Reserva.CantEntradas" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Reserva.Id">Actualizar</button>
                                &nbsp;
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
}
else
{
    <p class="text-center" style="font-size: 50px;">Acceso no autorizado</p>
}

