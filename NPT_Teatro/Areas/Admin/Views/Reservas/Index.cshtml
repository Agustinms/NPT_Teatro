@using NPT_Teatro.Utilidades
@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole(CNT.Admin))
{
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-light mt-5"> Lista de reservas</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-info mt-5"><i class="fas fa-plus"></i> Crear Nueva Reserva</a>
            </div>
        </div>

        <br />
        <br />
        <table id="tblReservas" class="table table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th class="text-light">Id</th>
                    <th class="text-light">Email</th>
                    <th class="text-light">Funcion</th>
                    <th class="text-light">CantEntradas</th>
                    <th class="text-light">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
    @section Scripts{
        <script src="~/js/reserva.js"></script>
    }

}
<p class="text-center" style="font-size: 50px;">Acceso no autorizado</p>


